<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.grit.bloopers.mapper.UserMapper">

    <!--회원가입-->
    <insert id="createUser" parameterType="UserDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (email, name, password, phoneNumber, profileImage)
        VALUES (#{email}, #{name}, #{password}, #{phoneNumber}, #{profileImage})
    </insert>

    <!--회원삭제-->
    <delete id="deleteUser">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <!--회원조회-->
    <select id="getUserByEmail" resultType="UserDTO">
        SELECT * FROM user WHERE email = #{email}
    </select>



</mapper>